// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  Genre     Genre?  @relation(fields: [genreId], references: [id])
  genreId   Int?
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  movie     Movie[]
}